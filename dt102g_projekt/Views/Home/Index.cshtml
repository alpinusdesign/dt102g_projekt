@model dt102g_projekt.ViewModels.IndexViewModel
@{

    ViewData["Title"] = "RenGöran - Städ och sanering";
}

    <section id="section-home">
        <h1 class="d-none">Hem</h1>
        <img src="~/img/home-img.jpg" alt="Städa gör han - Annars dör han" />
    </section>
<section id="section-news" class="container">
    <h1>Nyheter</h1>
    <div class="row">
        <div id="news-container" class="col-md-6">
            @if (Model.Posts.Count > 0)
            {
                <h2>@Model.Posts[0].Title</h2>

                <span class="text-muted"><i class="fas fa-calendar-alt pr-2"></i>@Html.DisplayFor(model => model.Posts[0].DatePosted)</span>
                <p>
                    @Model.Posts[0].Content
                </p>
            }
        </div>
        <div class="col-md-6">
            <h2 class="text-center">Fler nyheter</h2>
            <ul class="list-group">
                @if (Model.Posts.Count > 0)
                {
                    foreach(var post in Model.Posts.Skip(1))
                    {
                        <li class="list-group-item"><a class="d-block" asp-action="Details" asp-controller="Posts" asp-route-id="@post.Id">@post.Title</a></li>
                    }
                }
            </ul>
            <a class="text-center d-block p-2" asp-controller="Posts" asp-action="Index">Alla nyheter</a>
        </div>
    </div>
</section>
<section id="section-about" class="container">
    <h1>Om oss</h1>
    <img class="mt-3 mb-5" src="~/img/about-img.jpg" alt="En bild på en sop."/>
